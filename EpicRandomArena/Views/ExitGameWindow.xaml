<Window x:Class="EpicRandomArena.Views.ExitGameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EpicRandomArena.Views"
        mc:Ignorable="d"
        WindowStyle="None" Height="150" Width="400"
        WindowStartupLocation="CenterScreen"
        Background="DarkViolet"
        Closing="Window_Closing">
    <Grid>
        <StackPanel>
            <Button x:Name="ContinueButton" Click="ContinueButton_Click">Continue</Button>
            <Button x:Name="ExitToMenuButton" Click="ExitToMenuButton_Click">Exit To Menu</Button>
            <Button x:Name="ExitToDesktop" Click="ExitToDesktop_Click">Exit To Desktop</Button>
        </StackPanel>
    </Grid>
</Window>
