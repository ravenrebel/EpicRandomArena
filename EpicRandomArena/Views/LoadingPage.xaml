<Page x:Class="EpicRandomArena.Views.LoadingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EpicRandomArena.Views"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="LoadingPage"
      Background="Black">
    <Grid>
        <Canvas Height="200" Width="100" x:Name="SpinnerCanvas" RenderTransformOrigin=".5,.5">
            <Canvas.RenderTransform>
                <RotateTransform x:Name="Spin" Angle="0"/>
            </Canvas.RenderTransform>
        </Canvas>
        <Label Content="Loading..." 
               HorizontalAlignment="Center" 
               VerticalAlignment="Bottom"
               Margin="50"
               FontFamily="Muriad Pro"
               FontSize="50"
               Foreground="White"/>
    </Grid>
</Page>
