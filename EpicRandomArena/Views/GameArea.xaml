                        <Border x:Name="Border"
                        BorderThickness="2"
                        Background="{Binding OpponentCardIntelligenceLevel, Source={StaticResource viewmodel}, Converter={StaticResource leveltobrush}, UpdateSourceTrigger=PropertyChanged}" 
                        BorderBrush="#6aedf6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Content="{Binding OpponentCardIntelligencePoints, Source={StaticResource viewmodel}}" RecognizesAccessKey="True"/>
                        </Border>
