<Page x:Class="EpicRandomArena.Views.GameArea"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EpicRandomArena.Views"
        xmlns:mvvm="clr-namespace:EpicRandomArena.ViewModels"
        mc:Ignorable="d"
        d:DesignWidth="1280" d:DesignHeight="720">
    <Page.Resources>
        <mvvm:ApplicationViewModel x:Key="viewmodel" />
        <mvvm:LevelToBrushConverter x:Key="leveltobrush"/>
        <!-- Вигляд карти -->
        <Style x:Key="CardStyle" TargetType="StackPanel">
            <Setter Property="Width" Value="144"/>
            <Setter Property="Height" Value="256"/>
            <Setter Property="Background">
                <Setter.Value>
                    <ImageBrush ImageSource="/EpicRandomArena;component/Graphics/CardFace.png"/>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="PlayerCardStyle" TargetType="StackPanel" BasedOn="{StaticResource CardStyle}">
            <Setter Property="VerticalAlignment" Value="Top"/>
        </Style>
        <Style x:Key="OpponentCardStyle" TargetType="StackPanel" BasedOn="{StaticResource CardStyle}">
            <Setter Property="VerticalAlignment" Value="Bottom"/>
        </Style>

        <Style x:Key="PlDeckCountStyle" TargetType="Label">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Margin" Value="0 0 0 10"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Width" Value="80"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate>
                        <Border x:Name="Border">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0, 1">
                                    <GradientStop Color="#dab8f0" Offset="0"/>
                                    <GradientStop Color="White" Offset="0.45"/>
                                    <GradientStop Color="White" Offset="0.55"/>
                                    <GradientStop Color="#dab8f0" Offset="1" />
                                </LinearGradientBrush>
                            </Border.Background>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Content="{Binding Source={StaticResource viewmodel}, Path=PlayerDeckCount, UpdateSourceTrigger=PropertyChanged}" RecognizesAccessKey="True"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsEnabled" Value="false">
                                <Setter TargetName="Border" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0, 1">
                                            <GradientStop Color="#dab8f0" Offset="0"/>
                                            <GradientStop Color="White" Offset="0.45"/>
                                            <GradientStop Color="White" Offset="0.55"/>
                                            <GradientStop Color="#dab8f0" Offset="1" />
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="Foreground" Value="Black"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="OpDeckCountStyle" TargetType="Label">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Margin" Value="0 10 0 0"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Width" Value="80"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate>
                        <Border x:Name="Border">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0, 1">
                                    <GradientStop Color="#dab8f0" Offset="0"/>
                                    <GradientStop Color="White" Offset="0.45"/>
                                    <GradientStop Color="White" Offset="0.55"/>
                                    <GradientStop Color="#dab8f0" Offset="1" />
                                </LinearGradientBrush>
                            </Border.Background>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Content="{Binding Source={StaticResource viewmodel}, Path=OpponentDeckCount, UpdateSourceTrigger=PropertyChanged}" RecognizesAccessKey="True"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsEnabled" Value="false">
                                <Setter TargetName="Border" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0, 1">
                                            <GradientStop Color="#dab8f0" Offset="0"/>
                                            <GradientStop Color="White" Offset="0.45"/>
                                            <GradientStop Color="White" Offset="0.55"/>
                                            <GradientStop Color="#dab8f0" Offset="1" />
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="Foreground" Value="Black"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>


        <!--  -->
        <Style x:Key="TitleTextBlockStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Muriad Pro" />
            <Setter Property="FontSize" Value="18" />
            <Setter Property="FontWeight" Value="Regular" />
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="Height" Value="20"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Background" Value="Black"/>
            <Setter Property="Foreground" Value="#dab8f0"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="TextAlignment" Value="Center"/>
        </Style>
        <Style x:Key="PlayerTitleTextBlockStyle" TargetType="TextBlock" BasedOn="{StaticResource TitleTextBlockStyle}">
            <Setter Property="Text" Value="{Binding Source={StaticResource viewmodel}, Path=PlayerCardTitle, UpdateSourceTrigger=PropertyChanged}"/>
        </Style>
        <Style x:Key="OpponentTitleTextBlockStyle" TargetType="TextBlock" BasedOn="{StaticResource TitleTextBlockStyle}">
            <Setter Property="Text" Value="{Binding Source={StaticResource viewmodel}, Path=OpponentCardTitle, UpdateSourceTrigger=PropertyChanged}"/>
        </Style>

        <!-- Фото для карточок гравців-->
        <Style x:Key="PhotoStackPanelStyle" TargetType="Canvas">
            <Setter Property="Width" Value="110"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Height" Value="122"/>
            <Setter Property="VerticalAlignment" Value="Bottom"/>
            <Setter Property="IsEnabled" Value="{Binding IsYourTurn, Source={StaticResource viewmodel}, UpdateSourceTrigger=PropertyChanged}"/>
        </Style>
        
        <Style x:Key="PlayerPhotoStackPanelStyle" TargetType="Canvas" BasedOn="{StaticResource PhotoStackPanelStyle}">
            <Setter Property="Background">
                <Setter.Value>
                    <ImageBrush ImageSource="{Binding Source={StaticResource viewmodel}, Path=PlayerCardImage, UpdateSourceTrigger=PropertyChanged}"/>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="OpponentPhotoStackPanelStyle" TargetType="Canvas" BasedOn="{StaticResource PhotoStackPanelStyle}">
            <Setter Property="Background">
                <Setter.Value>
                    <ImageBrush ImageSource="{Binding Source={StaticResource viewmodel}, Path=OpponentCardImage, UpdateSourceTrigger=PropertyChanged}"/>
                </Setter.Value>
            </Setter>
        </Style>


        <!-- Стилі для атрибутів -->
        <Style x:Key="AttributeStackPanelStyle" TargetType="StackPanel">
            <Setter Property="Height" Value="115"/>
            <Setter Property="Width" Value="144"/>
            <Setter Property="Orientation" Value="Horizontal"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="StrPlButtonStyle" TargetType="Button">
            <Setter Property="Command" Value="{Binding SelectCommand, Source={StaticResource viewmodel}}"/>
            <Setter Property="IsEnabled" Value="{Binding IsYourTurn, Source={StaticResource viewmodel}, UpdateSourceTrigger=PropertyChanged}"/>
            <Setter Property="FontFamily" Value="Muriad Pro" />
            <Setter Property="FontSize" Value="20" />
            <Setter Property="FontWeight" Value="Regular" />
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Width" Value="80"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="VerticalAlignment" Value="Bottom"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Height" Value="25"/>
            <Setter Property="BorderBrush" Value="#6aedf6"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Background" Value="{Binding PlayerCardStrengthLevel, Source={StaticResource viewmodel}, Converter={StaticResource leveltobrush}, UpdateSourceTrigger=PropertyChanged}"/>
            <Setter Property="CommandParameter" Value="Strength"/>
            <Setter Property="Margin" Value="0 10 0 5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate>
                        <Border x:Name="Border"
                        BorderThickness="2"
                        Background="{Binding PlayerCardStrengthLevel, Source={StaticResource viewmodel}, Converter={StaticResource leveltobrush}, UpdateSourceTrigger=PropertyChanged}" 
                        BorderBrush="#6aedf6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Content="{Binding PlayerCardStrengthPoints, Source={StaticResource viewmodel}}" RecognizesAccessKey="True"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsEnabled" Value="false">
                                <Setter TargetName="Border" Property="Background" Value="{Binding PlayerCardStrengthLevel, Source={StaticResource viewmodel}, Converter={StaticResource leveltobrush}, UpdateSourceTrigger=PropertyChanged}" />
                                <Setter TargetName="Border" Property="BorderBrush" Value="#6aedf6" />
                                <Setter Property="Foreground" Value="Black"/>
                            </Trigger>
                            <!--<Trigger Property="IsEnabled" Value="true">
                                <Setter TargetName="Border" Property="Background" Value="{Binding PlayerCardStrengthLevel, Source={StaticResource viewmodel}, Converter={StaticResource leveltobrush}, UpdateSourceTrigger=PropertyChanged}" />
                                <Setter TargetName="Border" Property="BorderBrush" Value="#6aedf6" />
                                <Setter Property="Foreground" Value="Black"/>
                            </Trigger>-->
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="StlPlButtonStyle" TargetType="Button">
            <Setter Property="Command" Value="{Binding SelectCommand, Source={StaticResource viewmodel}}"/>
            <Setter Property="IsEnabled" Value="{Binding IsYourTurn, Source={StaticResource viewmodel}, UpdateSourceTrigger=PropertyChanged}"/>
            <Setter Property="FontFamily" Value="Muriad Pro" />
            <Setter Property="FontSize" Value="20" />
            <Setter Property="FontWeight" Value="Regular" />
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Width" Value="80"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="VerticalAlignment" Value="Bottom"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0 5"/>
            <Setter Property="Height" Value="25"/>
            <Setter Property="BorderBrush" Value="#6aedf6"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CommandParameter" Value="Stealth"/>
            <Setter Property="Background" Value="{Binding PlayerCardStealthLevel, Source={StaticResource viewmodel}, Converter={StaticResource leveltobrush}, UpdateSourceTrigger=PropertyChanged}" />
                <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate>
                        <Border x:Name="Border"
                        BorderThickness="2"
                        Background="{Binding PlayerCardStealthLevel, Source={StaticResource viewmodel}, Converter={StaticResource leveltobrush}, UpdateSourceTrigger=PropertyChanged}" 
                        BorderBrush="#6aedf6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Content="{Binding PlayerCardStealthPoints, Source={StaticResource viewmodel}}" RecognizesAccessKey="True"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsEnabled" Value="false">
                                <Setter TargetName="Border" Property="Background" Value="{Binding PlayerCardStealthLevel, Source={StaticResource viewmodel}, Converter={StaticResource leveltobrush}, UpdateSourceTrigger=PropertyChanged}" />
                                <Setter TargetName="Border" Property="BorderBrush" Value="#6aedf6" />
                                <Setter Property="Foreground" Value="Black"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="IntPlButtonStyle" TargetType="Button">
            <Setter Property="Command" Value="{Binding SelectCommand, Source={StaticResource viewmodel}}"/>
