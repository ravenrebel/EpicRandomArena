<Window x:Class="EpicRandomArena.MenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EpicRandomArena"
        WindowStyle="None"
        WindowState="Maximized">
    <Frame x:Name="_NavigationFrame" NavigationUIVisibility="Hidden">
        <Frame.Content>
            <Grid x:Name="LayoutGrid">
                <Grid.Background>
                    <ImageBrush ImageSource="/EpicRandomArena;component/Graphics/Menu.png"/>
                </Grid.Background>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1.5*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="1.5*"/>
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="1" >
                    <Button x:Name="PlayButton" Click="PlayButton_Click">Game</Button>
                    <Button>Info</Button>
                    <Button x:Name="ExitButton" Click="ExitButton_Click">Exit</Button>
                </StackPanel>
            </Grid>   
        </Frame.Content>
    </Frame>
</Window>
